  <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
  <script src="https://unpkg.com/leaflet.markercluster/dist/leaflet.markercluster.js"></script>

<!-- Contenu WEB -->
    <div id="mapid" class="lf" style="width: 99%; height: 500px;"></div>


<style>
.lf img {
    max-height: none;
}
  
    .popup-content {
      font-size: 11px;
      line-height: 1.5;
    }

    .popup-department {
      font-size: 15px;
      font-weight: bold;
      color: #327599;
    }
  
</style>

    <!-- Script -->
  <script>
    var map = L.map('mapid').setView([46.603354, 1.888334], 7);

    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
      attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors',
maxZoom:15
    }).addTo(map);

    var markers = L.markerClusterGroup({
      disableClusteringAtZoom: 15
    });

// Define the departments and their centroids
  var departments = [
    { antenne: 'Antenne Charente', coordinates: [45.638, 0.179],
    nom: 'Mélanie Adam', contact: '06 17 90 62 07 / 05 45 90 67 51' },
    { antenne: 'Antenne Charente-Maritime', coordinates: [45.937, -0.96], nom: 'Olivier Allenou', contact: '06 11 47 05 01 / 05 46 84 72 08' },
