    { antenne: 'Antenne Creuse', coordinates: [46.24, 1.49], nom: 'Yvan Grugier', contact: '06 52 47 57 93 / 05 55 03 09 03' },
    { antenne: 'Antenne Dordogne', coordinates: [45.035, 0.370], nom: 'Maxime Cosson', contact: '07 66 51 86 89 / 05 53 81 39 57' },
    { antenne: 'Antenne Gironde', coordinates: [44.765, -0.559], nom: 'Carole Decker', contact: '06 51 06 63 27' },
